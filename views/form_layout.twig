{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <ul class="unstyled">
                {% for error in errors %}
                    <li class="text-error"><span class="label label-important">{{ error.message }}</span></li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
